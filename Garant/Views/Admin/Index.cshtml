@model List<Garant.Models.Article>
@{ Layout = "_Layout"; }

<div class="container text-center text-gradient mt-5 mb-1">
    <h1>Статьи</h1>
    <hr>
</div>


<main role="main">


    <div class="album  ">
        <div class="container">

            <div class="row">

                @foreach (Article article in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            @if (article.Img != null)
                            {
                                <img class="card-img-top" src="./img/@article.Img" alt="Card image cap">
                            }
                            else
                            {
                                <img class="card-img-top" src="~/img/staticFirstimg.jpg" alt="Card image cap">
                            }


                            <div class="card-body">
                                <p class="card-text">@article.Title</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="EditArticle" asp-controller="Admin" asp-route-id="@article.id"><button type="button" class="btn btn-sm btn-outline-secondary">Редактировать</button></a>
                                    </div>
                                    <small class="text-muted">@article.TimeToRead мин</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>

</main>



