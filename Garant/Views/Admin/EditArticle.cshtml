@model Garant.Models.Article
@{ Layout = "_Layout"; }

<div class="container text-center text-gradient mt-5 mb-1">
    <h1>Редактор статьи</h1>
    <hr>
</div>



<main role="main">


    <div class="album  ">
        <div class="container">

            <form asp-action="Update" asp-controller="Admin" method="post" enctype="multipart/form-data">

                <input type="hidden" name="id" value="@Model.id" />

                <div class="form-row form-group">

                    <label for="inputEmail4">Заголовок:</label>
                    <input type="text" name="title" class="form-control" id="inputEmail4" value="@Model.Title" />

                </div>


                <div class="form-row">
                    <div class="form-group col-md-6">

                        <label for="inputZip">Изображение:</label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="img" id="inputGroupFile01"
                                       aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="inputZip">Время прочтения (в минутах):</label>
                        <input type="text" name="timetoread" class="form-control" id="inputZip" value="@Model.TimeToRead" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Контент:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="content" rows="6">@Model.Content</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Обновить</button>

            </form>




        </div>
    </div>

</main>



